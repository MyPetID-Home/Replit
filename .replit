modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ruby", "bundler"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Jekyll Pet Tracker Server"

[[workflows.workflow]]
name = "Jekyll Pet Tracker Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bundle install && bundle exec jekyll serve --host 0.0.0.0 --port 5000 --livereload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000
